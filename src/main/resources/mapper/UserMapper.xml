<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springchatapp.demo.mapper.UserMapper">

    <!-- Uidから取得 -->
    <select id="selectByUserName" resultType="springchatapp.demo.model.resource.UserResource">
        select uid,password from user where uid = #{uid};
    </select>

    <!-- タスクを登録 -->
    <insert id="insertTask" parameterType="springchatapp.demo.model.resource.AddTaskResource">
        insert into task (uid,task_name,status_cd)
        values (#{uid},#{taskName},#{statusCd})
    </insert>
</mapper>